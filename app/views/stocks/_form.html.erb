<%= simple_form_for(@stock) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :initial_quantity %>
    <%= f.input :current_quantity %>
    <%= f.input :purchase_date %>
    <%= f.input :expiration_date %>
    <%= f.input :purchase_price %>
    <%= f.input :batch_number %>
    <%= f.association :supplier %>
    <%= f.association :stock_type %>
    <%= f.input :unit %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
